@page "/"
@using CarRental.Business.Classes
@using CarRental.Common.Interface

@inject CarRental.Business.Classes.BookingProc bp

<h1>Vehicles</h1>
<table class="table">
    <thead>
        <tr>
            <th>RegNr</th>
            <th>Brand</th>
            <th>Odometer</th>
            <th>CostKM</th>
            <th>Type</th>
            <th>costDay</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in bp.GetVehicles())
        {
            <tr>
                <td>@vehicle.regNr</td>
                <td>@vehicle.brand</td>
                <td>@vehicle.odometer</td>
                <td>@vehicle.costKM</td>
                <td>@vehicle.Type</td>
                <td>@vehicle.costDay</td>
                <td>@vehicle.Status</td>
            </tr>
        }
    </tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
